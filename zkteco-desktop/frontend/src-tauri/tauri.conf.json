{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "frontend",
  "version": "0.1.0",
  "identifier": "com.techres.frontend",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:backend && bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ZKTeco Desktop",
        "width": 800,
        "height": 600,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../../backend/dist/zkteco-backend-x86_64-pc-windows-msvc.exe",
      "../../backend/dist/zkteco-backend-aarch64-apple-darwin",
      "../../backend/dist/zkteco-backend-x86_64-apple-darwin",
      "../../backend/dist/zkteco-backend-x86_64-unknown-linux-gnu"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
